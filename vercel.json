{
  "version": 2,
  "builds": [
    {
      "src": "api/groq.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["api/**"] 
      }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/groq",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/groq.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
